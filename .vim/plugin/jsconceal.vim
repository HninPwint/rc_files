let g:JSConcealCrazinessLevel = get(g:, 'JSConcealCrazinessLevel', 3)

function! s:JSConcealCycle()
  let g:JSConcealCrazinessLevel = (g:JSConcealCrazinessLevel + 1) % 11
  call s:JSConcealOn()
  echo "Craziness=".g:JSConcealCrazinessLevel." @: to cycle"
endfunction

